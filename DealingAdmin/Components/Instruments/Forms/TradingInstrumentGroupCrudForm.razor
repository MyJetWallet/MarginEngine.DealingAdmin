@using Microsoft.AspNetCore.Components
@using DealingAdmin.Abstractions.Models
@using DealingAdmin.Abstractions
@using SimpleTrading.Abstractions.Common.InstrumentsAvatar

<div>
    <Drawer Closable="true" Width="720" Visible="true" Title="@("Add trading instrument group")" OnClose="_ => OnClose.Invoke()">
        <Template style="height:90%">
            <AntDesign.Row Gutter="16">
                <AntDesign.Col Span="12">
                    <Text>Id</Text>
                    <Input @bind-Value="InstrumentGroup.Id" Placeholder="Id" TValue="string"/>
                </AntDesign.Col>
                <AntDesign.Col Span="12">
                    <Text>Name</Text>
                    <Input @bind-Value="InstrumentGroup.Name" Placeholder="Name" TValue="string"/>
                </AntDesign.Col>
            </AntDesign.Row>
            <br/>
            <AntDesign.Row >
                <AntDesign.Col>
                    <Text>Weight</Text>
                    <Input @bind-Value="InstrumentGroup.Weight" Placeholder="Weight" TValue="int"/>
                </AntDesign.Col>
            </AntDesign.Row>
        </Template>

        <AntDesign.Button OnClick="@(() => OnSubmit(InstrumentGroup))" Type="primal" Color="AntDesign.Color.Green1" Block>Submit</AntDesign.Button>
    </Drawer>
</div>

@code {

    [Parameter]
    public InstrumentGroupModel InstrumentGroup { get; set; } = new();

    [Parameter]
    public Action OnClose { get; set; }

    [Parameter]
    public Action<InstrumentGroupModel> OnSubmit { get; set; }

}