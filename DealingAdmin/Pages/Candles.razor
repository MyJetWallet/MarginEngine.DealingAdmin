@page "/Candles"

@using AntDesign
@using DealingAdmin.Components.Candles

<PageTitle>Candles</PageTitle>

<Tabs TabBarStyle="" OnChange="@OnTabSelect" DefaultActiveKey="@SelectedTabKey" Animated="@false">
    <TabPane Tab="UPLOAD" Key="CandlesUpload">
        <CandlesUploadTab/>
	</TabPane>
    <TabPane Tab="VERIFY" Key="CandlesVerify">
        <CandlesVerifyTab/>
    </TabPane>
    <TabPane Tab="EDIT" Key="CandlesEdit">
        <CandlesEditTab/>
    </TabPane>
</Tabs>

@code {
    private string SelectedTabKey { get; set; }
    
    protected override async Task OnInitializedAsync()
    {
        SelectedTabKey = "CandlesUpload";
        await base.OnInitializedAsync();
    }

    private void OnTabSelect(string tab)
    {
        SelectedTabKey = tab;
        StateHasChanged();
    }
}
