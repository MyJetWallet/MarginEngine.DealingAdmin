@using DealingAdmin.Abstractions
@using DealingAdmin.Abstractions.Models
@using DealingAdmin.Shared.Services
@using SimpleTrading.Abstraction.BidAsk
@using StAbstractionInstruments = SimpleTrading.Abstraction.Trading.Instruments
@using SimpleTrading.Abstraction.Trading.Settings

<div style="font-family:courier">
    @foreach (var provider in ProvidersList)
    {
        <LpQuoteLine Instrument="@Instrument" ProviderId="provider" IsDefaultProvider="@(provider == ActiveProviderId)"  />
    }
    <CurrentLpQuoteLine Instrument="@Instrument" ProviderId="Current"/>
</div>

@code {
    [Parameter]
    public StAbstractionInstruments.ITradingInstrument Instrument { get; set; }

    [Parameter]
    public List<string> ProvidersList { get; set; }

    [Parameter]
    public string ActiveProviderId { get; set; }

    private string currentProvider;
    private string defaultProvider;
}
